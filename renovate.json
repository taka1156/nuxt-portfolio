{
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "develop"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": "every weekend",
  "labels": [
    "renovate"
  ],
  "patch": {
    "automerge": true
  },
  "minor": {
    "groupName": "all dependencies"
  },
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 7pm on the first day of the month"
    ]
  }
}
